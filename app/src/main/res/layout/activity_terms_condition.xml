<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/border_new">

            <RelativeLayout
                android:id="@+id/NavigationUpIM"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/back_icon" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/RRtoolbar"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Varius viverra eu id amet velit. Nisl nisl, at commodo, a commodo vitae maecenas enim ornare. Elit morbi in phasellus sed praesent lacus arcu quis. Purus tellus in nunc hendrerit mauris diam, vel lectus gravida. Porttitor urna nisl scelerisque sit. Quis nisi, mattis risus bibendum consectetur vel. Vestibulum, nec volutpat viverra sed sed sit id id. Augue vitae tincidunt egestas pretium enim, dui. Tincidunt sagittis nibh feugiat tellus risus, consequat habitasse. Mi sed vestibulum in est sit nunc non sed."
                    android:textColor="@color/natural_gray"
                    android:textSize="@dimen/_14sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Privacy Notice"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Varius viverra eu id amet velit. Nisl nisl, at commodo, a commodo vitae maecenas enim ornare. Elit morbi in phasellus sed praesent lacus arcu quis. Purus tellus in nunc hendrerit mauris diam, vel lectus gravida. Porttitor urna nisl scelerisque sit. Quis nisi, mattis risus bibendum consectetur vel. Vestibulum, nec volutpat viverra sed sed sit id id. Augue vitae tincidunt egestas pretium enim, dui. Tincidunt sagittis nibh feugiat tellus risus, consequat habitasse. Mi sed vestibulum in est sit nunc non sed."
                    android:textColor="@color/natural_gray"
                    android:textSize="@dimen/_14sdp"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/RRYes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/border_btn"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/_20sdp"
                android:text="@string/yes_i_agree"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>


        <WebView
            android:id="@+id/TermsWV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/RRtoolbar"
            android:layout_marginTop="@dimen/_1sdp"
            android:visibility="gone">
        </WebView>


        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/RRtoolbar"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/black"/>


        <ir.alirezabdn.wp7progress.WP10ProgressBar
            android:id="@+id/loader_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:indicatorHeight="7"
            app:indicatorRadius="5"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

</layout>
