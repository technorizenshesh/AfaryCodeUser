<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2F2"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/image_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="@dimen/_15sdp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/pin_marker">

        </ImageView>

        <LinearLayout
            android:id="@+id/li1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

             <LinearLayout
                android:layout_width="@dimen/_245sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_edit_search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="5dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/search"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint">

                </ImageView>

                <AutoCompleteTextView
                    android:id="@+id/gettypedlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/clear_pick_ic"
                    android:background="@null"
                    android:hint="search"
                    android:inputType="textNoSuggestions"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#636262" />

                <EditText
                    android:id="@+id/edittext_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/clear_pick_ic"
                    android:background="@null"
                    android:hint="search"
                    android:inputType="textNoSuggestions"
                    android:layoutDirection="locale"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#636262"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/clear_pick_ic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/done_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="@string/done"
                android:textColor="@color/purple_200"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/li1" />

    </RelativeLayout>

</LinearLayout>