<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/border_new">

            <RelativeLayout
                android:id="@+id/back_navigation"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/back_icon" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/order_details"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

      <androidx.core.widget.NestedScrollView
          android:layout_below="@+id/RRtoolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scrollbars="none">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="@dimen/_10sdp"
              >

              <LinearLayout
                  android:id="@+id/llOne"
                  android:layout_width="@dimen/_100sdp"
                  android:layout_height="@dimen/_100sdp"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:visibility="gone"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center_horizontal"

                  >
                  <ImageView
                      android:id="@+id/product_image"
                      android:layout_width="@dimen/_100sdp"
                      android:layout_height="@dimen/_100sdp"
                      android:layout_marginLeft="@dimen/_2sdp"
                      android:scaleType="fitXY"

                      />
              </LinearLayout>


              <LinearLayout
                  android:id="@+id/llTwo"
                  android:layout_width="@dimen/_100sdp"
                  android:layout_height="@dimen/_100sdp"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center_horizontal"

                  android:visibility="gone"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:layout_marginLeft="@dimen/_2sdp"
                  >
                  <ImageView
                      android:id="@+id/product_imageTw01"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:scaleType="fitXY"
                      />

                  <ImageView
                      android:id="@+id/product_imageTwo2"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:scaleType="fitXY"

                      />
              </LinearLayout>


              <LinearLayout
                  android:id="@+id/llThree"
                  android:layout_width="@dimen/_100sdp"
                  android:layout_height="@dimen/_100sdp"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center_horizontal"

                  android:visibility="gone"
                  android:orientation="vertical"
                  android:weightSum="1"
                  android:layout_marginLeft="@dimen/_2sdp"
                  >

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight=".5"
                      android:weightSum="1"
                      >
                      <ImageView
                          android:id="@+id/product_imageThree1"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight=".5"
                          android:scaleType="fitXY"

                          />

                      <ImageView
                          android:id="@+id/product_imageThree2"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight=".5"
                          android:scaleType="fitXY"
                          />
                  </LinearLayout>



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight=".5">

                      <ImageView
                          android:id="@+id/product_imageThree3"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:scaleType="fitXY"
                          />
                  </LinearLayout>




              </LinearLayout>


              <LinearLayout
                  android:id="@+id/llFour"
                  android:layout_width="@dimen/_100sdp"
                  android:layout_height="@dimen/_100sdp"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center_horizontal"
                  android:visibility="visible"
                  android:orientation="vertical"
                  android:weightSum="1"
                  android:layout_marginLeft="@dimen/_2sdp"
                  >

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight=".5"
                      android:weightSum="1"
                      >
                      <ImageView
                          android:id="@+id/product_imageFour1"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight=".5"
                          android:scaleType="fitXY"
                          />



                      <ImageView
                          android:id="@+id/product_imageFour2"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight=".5"
                          android:scaleType="fitXY"
                          />


                  </LinearLayout>



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight=".5"
                      android:weightSum="1"
                      android:orientation="horizontal">

                      <ImageView
                          android:id="@+id/product_imageFour3"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight=".5"
                          android:scaleType="fitXY"/>

                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight=".5"
                          android:gravity="center">

                          <TextView
                              android:id="@+id/tvImgCount"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="+4"
                              android:fontFamily="@font/poppins_regular"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_10sdp"/>


                      </LinearLayout>

                  </LinearLayout>




              </LinearLayout>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:fontFamily="@font/poppins_regular"
                  android:text="@string/afary_code"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_12sdp"
                  android:layout_marginTop="@dimen/_15sdp"
                  />


              <TextView
                  android:id="@+id/tvAfaryCode"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:fontFamily="@font/poppins_regular"
                  android:text="@string/afary_code"
                  android:textColor="@color/red"
                  android:textSize="@dimen/_15sdp"
                  />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:fontFamily="@font/poppins_regular"
                  android:text="@string/present_this_code"
                  android:textColor="@color/black"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:textSize="@dimen/_10sdp"
                  android:visibility="gone"
                  />


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:fontFamily="@font/poppins_regular"
                  android:text="@string/item_list"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_12sdp"
                  android:layout_marginTop="@dimen/_15sdp"
                  />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:background="@color/blue_circle"
                  android:padding="@dimen/_10sdp"
                  >

                  <TextView
                      android:id="@+id/tvProductName"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".5"
                      android:layout_gravity="center_vertical"
                      android:fontFamily="@font/poppins_regular"
                      android:text="@string/product_name"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_11sdp"
                      />


                  <TextView
                      android:id="@+id/tvProductPrice"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".27"
                      android:layout_gravity="center_vertical"
                      android:fontFamily="@font/poppins_regular"
                      android:text="@string/qty"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_11sdp"
                      />


                  <TextView
                      android:id="@+id/tvProductTotal"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight=".23"
                      android:layout_gravity="center_vertical"
                      android:fontFamily="@font/poppins_regular"
                      android:text="@string/total"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_11sdp"
                      />

              </LinearLayout>


              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvDetails"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/item_details"/>


          </LinearLayout>


      </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:weightSum="1">


            <TextView
                android:id="@+id/btnDecline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@drawable/btn_shape_red_captule"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/decline"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"/>

            <TextView
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@drawable/btn_shape_capsule"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/chat"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"/>

            <TextView
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@drawable/btn_shape_capsule"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/accept"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>



    </RelativeLayout>
</layout>
