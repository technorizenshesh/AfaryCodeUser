<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/gray_btn_bg_color"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/delivery_place_accuracy"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/_10sdp"
        >

        <RelativeLayout
            android:id="@+id/rlPickUpOffice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RadioButton
                android:layout_toStartOf="@+id/tvPrice11"
                android:id="@+id/rdPickOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/i_am_picking_up_the_package_at_the_office"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvPrice11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="FCFA00"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlDeliverAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">



            <RadioButton
                android:layout_toStartOf="@+id/tvPrice22"
                android:id="@+id/rdDeliverAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/i_would_rather_be_delivered_to_the_address_i_indicated"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvPrice22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="FCFA20"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                />

        </RelativeLayout>








    </RadioGroup>


</LinearLayout>